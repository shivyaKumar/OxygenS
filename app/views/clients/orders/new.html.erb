<div class="container">
  <h1>Checkout</h1>

  <%= form_with model: @order, url: clients_orders_path, local: true do |form| %>
    <div class="form-group">
      <%= form.label :address, 'Shipping Address' %>
      <%= form.text_area :address, class: 'form-control', required: true %>
    </div>

    <div class="form-group mt-3">
      <%= form.label :payment_method, 'Payment Method' %>
      <%= form.select :payment_method, ['Credit Card', 'Paypal', 'Bank Transfer'], {}, class: 'form-control', required: true %>
    </div>

    <div class="form-group mt-4">
      <%= form.submit 'Place Order', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to 'Back to Cart', clients_cart_path, class: 'btn btn-secondary mt-2' %>
</div>
